# Nocturnal Archive - Production Environment Configuration
# Copy this to .env and fill in your actual values

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-production-key-change-this
JWT_SECRET=your-jwt-secret-key-change-this

# Database Configuration
MONGODB_URL=mongodb://mongo:27017/nocturnal_archive
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-mongo-password
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# PostgreSQL Configuration
POSTGRES_USER=nocturnal_user
POSTGRES_PASSWORD=your-postgres-password
DATABASE_URL=postgresql://nocturnal_user:your-postgres-password@postgres:5432/nocturnal_archive

# Supabase Configuration (Authentication)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Stripe Configuration (Payment Processing)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PRO_PRICE_ID=price_your-pro-tier-price-id
STRIPE_BUSINESS_PRICE_ID=price_your-business-tier-price-id
STRIPE_ENTERPRISE_PRICE_ID=price_your-enterprise-tier-price-id

# LLM API Keys
MISTRAL_API_KEY=your-mistral-api-key
CEREBRAS_API_KEY=your-cerebras-api-key
COHERE_API_KEY=your-cohere-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Academic API Keys
OPENALEX_API_KEY=your-openalex-api-key
SEMANTIC_SCHOLAR_API_KEY=your-semantic-scholar-api-key
CORE_API_KEY=your-core-api-key
ARXIV_EMAIL=your-email@domain.com

# Search API Keys
GOOGLE_SEARCH_API_KEY=your-google-search-api-key
GOOGLE_SEARCH_ENGINE_ID=your-google-search-engine-id

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=your-grafana-admin-password

# Email & Notifications
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# CDN Configuration
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# Security
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Performance
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
TIMEOUT=300

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_USAGE_TRACKING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_WHITE_LABEL=false

# Development Overrides (set to false in production)
ENABLE_DEBUG_MODE=false
ENABLE_TEST_MODE=false
ENABLE_MOCK_PAYMENTS=false
