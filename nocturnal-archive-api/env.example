# API Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
OPENALEX_API_KEY=your-openalex-key-here

# FinGPT Configuration
FINGPT_BASE_MODEL=meta-llama/Llama-3.1-8B-Instruct
FINGPT_LORA_ID=FinGPT/fingpt-mt_llama2-7b_lora
FINGPT_LOAD_4BIT=true
HF_TOKEN=your_huggingface_token_here
NLP_MAX_NEW_TOKENS=128
NLP_TEMPERATURE=0.2
NLP_CACHE_TTL=900

# RAG & Vector Search Configuration
DB_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/finsight
RAG_EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
RAG_TOP_K=5
ENABLE_RAG=true

# Admin Authentication
ADMIN_KEY=admin-key-change-me

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/nocturnal_archive
REDIS_URL=redis://localhost:6379

# App Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# Rate Limiting
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_BURST=10

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.com

# API Configuration
API_V1_PREFIX=/api/v1
MAX_PAPERS_PER_REQUEST=50
MAX_SYNTHESIS_WORDS=2000
