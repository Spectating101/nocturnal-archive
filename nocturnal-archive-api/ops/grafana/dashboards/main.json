{
  "title": "Nocturnal Archive - API Overview",
  "schemaVersion": 39,
  "tags": ["nocturnal", "api"],
  "time": { "from": "now-6h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "endpoint",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(http_requests_total, endpoint)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Requests/s",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(http_requests_total[5m]))", "legendFormat": "all" }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Requests by status",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum by (status) (rate(http_requests_total[5m]))", "legendFormat": "{{status}}" }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "p50 latency per endpoint",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, endpoint))",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
    },
    {
      "type": "timeseries",
      "title": "p95 latency per endpoint",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, endpoint))",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
    },
    {
      "type": "timeseries",
      "title": "4xx/5xx rate",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum by (status) (rate(http_requests_total{status=~\"4..\"}[5m]))", "legendFormat": "{{status}}" },
        { "expr": "sum by (status) (rate(http_requests_total{status=~\"5..\"}[5m]))", "legendFormat": "{{status}}" }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
    },
    {
      "type": "timeseries",
      "title": "Rate limit hits per endpoint",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum by (endpoint) (rate(rate_limit_hits_total[5m]))", "legendFormat": "{{endpoint}}" }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
    },
    {
      "type": "timeseries",
      "title": "Token usage by model",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum by (model) (rate(tokens_used_total[5m]))", "legendFormat": "{{model}}" }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20}
    }
  ]
}


