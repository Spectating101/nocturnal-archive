# Unified Nocturnal Platform Environment Configuration
# Copy this to .env and fill in your actual values

# =============================================================================
# GROQ CONFIGURATION (Primary LLM Provider)
# =============================================================================
# Get free API keys from https://console.groq.com/
GROQ_API_KEY_1=your_first_groq_api_key_here
GROQ_API_KEY_2=your_second_groq_api_key_here
GROQ_API_KEY_3=your_third_groq_api_key_here

# Groq API Key Limits (per key - free tier)
GROQ_DAILY_LIMIT=14400
GROQ_RATE_LIMIT=30

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL for all modules
DATABASE_URL=postgresql://user:password@localhost:5432/nocturnal_platform

# Redis for caching
REDIS_URL=redis://localhost:6379

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_BURST=10
ADMIN_KEY=admin-key-change-me

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here
ENABLE_METRICS=true

# =============================================================================
# CORS & SECURITY
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_V1_PREFIX=/api/v1
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=1

# =============================================================================
# MODULE CONFIGURATION
# =============================================================================
# Enable/disable modules
FINSIGHT_ENABLED=true
ARCHIVE_ENABLED=true
ASSISTANT_ENABLED=true

# =============================================================================
# FINSIGHT MODULE (Financial Data)
# =============================================================================
FINSIGHT_STRICT=false
SEC_EDGAR_BASE_URL=https://data.sec.gov
SEC_EDGAR_USER_AGENT=Nocturnal Platform (contact@example.com)
MAX_FINANCIAL_REQUESTS_PER_HOUR=50

# =============================================================================
# ARCHIVE MODULE (Research)
# =============================================================================
MAX_PAPERS_PER_REQUEST=50
MAX_SYNTHESIS_WORDS=2000
DEFAULT_SEARCH_LIMIT=10
MAX_SEARCH_LIMIT=100
OPENALEX_API_KEY=your-openalex-key-here
OPENALEX_BASE_URL=https://api.openalex.org

# =============================================================================
# ASSISTANT MODULE (R/SQL)
# =============================================================================
ASSISTANT_SERVER_URL=http://localhost:8000
MAX_ASSISTANT_REQUESTS_PER_HOUR=200

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
ENABLE_CACHING=true
FINSIGHT_CACHE_TTL=7200
ARCHIVE_CACHE_TTL=1800
ASSISTANT_CACHE_TTL=900

# =============================================================================
# LLM CONFIGURATION (Groq-specific)
# =============================================================================
GROQ_DEFAULT_MODEL=llama-3.1-70b-versatile
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=1000

# Module-specific LLM settings
FINSIGHT_TEMPERATURE=0.3
FINSIGHT_MAX_TOKENS=1500
ARCHIVE_TEMPERATURE=0.4
ARCHIVE_MAX_TOKENS=2000
ASSISTANT_TEMPERATURE=0.5
ASSISTANT_MAX_TOKENS=1200

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
RAILWAY_ENVIRONMENT=production
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_CROSS_MODULE_SEARCH=true
ENABLE_UNIFIED_DASHBOARD=true
ENABLE_BETA_FEATURES=true

# =============================================================================
# BETA LAUNCH CONFIGURATION
# =============================================================================
BETA_LAUNCH_DATE=2025-09-30
MAX_BETA_USERS=100
BETA_USER_LIMIT_PER_HOUR=50
